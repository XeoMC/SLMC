<UserControl x:Class="SharpLauncher_MC.xmc.UserControls.zSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xmc.uc"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="256" SnapsToDevicePixels="true" Margin="4">
    <Grid>
        <Border Height="2" BorderThickness="0" Background="{DynamicResource zBackgroundHighlight}" Margin="4, 0, 4, 0"/>
        <local:zButton Height="32" Width="16" Text="" HorizontalAlignment="Left" MouseDown="zButton_MouseDown" MouseUp="zButton_MouseUp"/>
    </Grid>
</UserControl>
